


md-toolbar.navbar.md-whiteframe-z3.fade-in-content(ng-class='{"fade-in": navbarInit}' ng-init='navbarInit = true')
  div.md-toolbar-tools(flex layout-align='space-between center')

    md-menu(md-position-mode="")
      md-button.md-icon-button(tabindex="1" aria-label='Timesheet menu', ng-click='$mdOpenMenu($event)',)
        md-icon(md-font-set="material-icons") menu
      md-menu-content(width='3')
        md-menu-item(ng-show='! navbarDesktopToggle && isToggleFinished')
          md-button(ng-click='toggleSideNav()' aria-label="Show timesheets")
            md-icon(md-font-set="material-icons") visibility
            | Show timesheets
        md-menu-item(ng-show='navbarDesktopToggle && isToggleFinished')
          md-button(ng-click='toggleSideNav()' aria-label="Hide timesheets")
            md-icon(md-font-set="material-icons") visibility_off
            | Hide timesheets
        md-menu-item
          md-button(ng-click='logout()' aria-label="Logout")
            md-icon(md-font-set="material-icons") power_settings_new
            | Logout


    md-content
      md-button.md-icon-button.save-button(tabindex="15" ng-click='save($event)' aria-label="New task")
        md-icon(ng-hide='isSaving()' md-font-set="material-icons") save
        md-progress-circular(ng-show='isSaving()' md-mode="indeterminate" md-diameter='40')

      md-button.md-icon-button.new-button(tabindex="15" ng-click='addClient($event)' aria-label="New task")
        md-icon(md-font-set="material-icons") add
        md-tooltip.md-warn(md-direction='left') New task


